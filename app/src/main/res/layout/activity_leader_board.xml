<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:id="@+id/listItem2">
    <android.support.v7.widget.CardView
        android:id="@+id/crv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="17sp"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="17sp"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textSize="17sp"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </GridLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/crv"
        android:id="@+id/dataleader"
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:scrollbars="vertical" />
    <android.support.v7.widget.CardView
        android:layout_margin="3dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tv121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peringkat Tertinggi Saya"/>
            <ImageView
                android:id="@+id/img122"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv121"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/trophy"/>
            <TextView
                android:id="@+id/tv_peringkat_saya"
                android:textColor="@color/DarkOrange"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/img122"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="0"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tv122"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peringkat Tertinggi"/>
            <ImageView
                android:id="@+id/img123"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv122"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/award"/>
            <TextView
                android:maxLength="12"
                android:id="@+id/tv_peringkat_tertinggi"
                android:textColor="@color/DeepPink"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/img123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Nama"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>