<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_margin="30dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/view_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">
            <TextView
                android:textStyle="bold"
                android:drawableTop="@drawable/icon_app3"
                android:id="@+id/tv1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil Kuis Saya"
                android:textColor="@color/colorWhite"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:background="@color/colorPrimary" />
            <TextView
                android:id="@+id/tv_score_akhir"
                android:layout_below="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textSize="17sp"
                android:layout_margin="10dp"
                android:textAlignment="textEnd"
                android:gravity="end"/>
            <TextView
                android:textSize="17sp"
                android:layout_margin="10dp"
                android:layout_below="@id/tv_score_akhir"
                android:textAlignment="textEnd"
                android:id="@+id/tv_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ExpPoint"
                android:gravity="end" />
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_below="@+id/tv_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:background="@drawable/shape_line_recycler">
                <ImageView
                    android:id="@+id/bintang1"
                    android:layout_margin="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <ImageView
                    android:id="@+id/bintang2"
                    android:layout_margin="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <ImageView
                    android:id="@+id/bintang3"
                    android:layout_margin="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="202dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_lihat_peringkat"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:text="Lihat Peringkat"
                android:background="#FF00B916"
                android:textAllCaps="false"
                android:textColor="#fff"/>
            <Button
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:drawableStart="@drawable/ic_share_black_24dp"
                android:text="Share"
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/DarkOrange"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_share_black_24dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>